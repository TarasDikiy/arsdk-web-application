<form action="/create" method="POST">
    <h1>New zone</h1>
    <div class="input-field">

        <input type="text" name="title" placeholder="Zone title">

        <input type="text" name="latitude" placeholder="Zone latitude">

        <input type="text" name="longitude" placeholder="Zone longitude">

        <input type="text" name="radius" placeholder="Zone radius">
    </div>

    <button type="submit" class="btn">Create new zone</button>
</form>

